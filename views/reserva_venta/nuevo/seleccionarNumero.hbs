<form action="/reservas/crear" method="POST" class="w-50 m-auto" id="form">
    
    <div class="form-group">
        <label for="tipo">Tipo de Registro</label>
        <input class="form-control" type="text" name="tipo" value="{{tipo}}" readonly>
    </div>
    <div class="form-group">
        <label for="valor">Valor</label>
        <input class="form-control" type="text" name="valor" value="{{valor}}" readonly>
    </div>
    <div class="form-group">
        <label for="valor">pelicula</label>
        <input class="form-control" type="text" name="pelicula" value="{{pelicula}}" readonly>
        <input class="form-control" type="hidden" name="idPelicula" value="{{idPelicula}}" readonly>
    </div>
    <div class="form-group">
        <label for="idSala">Sala de emision</label>
        <input class="form-control" type="hidden" name="idSala" value="{{idSala}}" readonly>
        <input class="form-control" type="text" name="sala" value="{{sala}}" readonly>
    </div>

    <div class="form-group">
        <label for="idSala">Fila Seleccionada</label>
        <input class="form-control" type="text" name="silla" value="{{fila}}" readonly>
    </div>
    
    <div class="form-group">
        <label for="valor">Selecciona una fila</label>
        <select class="form-control" name="silla">
            <option>Selecciona una sala</option>
            {{#each numeros }}
                <option value="{{numero}}">
                    {{numero}}
                </option>
            {{/each}}
        </select>
    </div>

    <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit">
            Continuar
        </button>
    </div>
</form>