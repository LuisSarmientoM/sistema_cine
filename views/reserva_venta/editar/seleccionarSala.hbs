<form action="/reservas/editar/{{id}}/seleccionarFila" method="POST" class="w-50 m-auto" id="form">
    <div class="form-group">
        <label for="tipo">Tipo de Registro</label>
        <select class="form-control" name="tipo">
            <option>Selecciona una sala</option>
            <option {{ selected 'Reserva' reserva.tipo}} value="Reserva">Reserva</option>
            <option {{ selected 'Venta' reserva.tipo}} value="Venta">Venta</option>
        </select>
    </div>
    <div class="form-group">
        <label for="valor">Valor</label>
        <input class="form-control" type="number" name="valor" value="{{ reserva.valor}}">
    </div>
    <div class="form-group">
        <label for="idSala">Sala de emision</label>
        <select class="form-control" name="idSala" >
            <option>Selecciona una sala</option>
            {{#each salas }}
                <option value="{{id}}" {{ selected id ../reserva.idSala}}>
                    {{pelicula}}
                </option>
            {{/each}}
        </select>
    </div>
   


    <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit">
            Continuar
        </button>
    </div>
</form>
